<div class="admin">
  <div class="clearfix">
    <h1 class="float-left">Showcase</h1>
    <div class="float-right header-button">
      <%= link_to 'Add Item', new_admin_showcase_item_path, class: 'btn btn-school' %>
    </div>
  </div>
  <p class="description">This section is where administrators can manage showcase images. These items will appear on the homepage in a block below the search & site info block.</p>
  <table class="table table-boredered table-trials">
    <caption>Showcase Admin</caption>
    <tr>
      <th>Name</th>
      <th>Order</th>
      <th>Active</th>
      <th>Action</th>
    </tr>
    <% if @showcase_items.empty? %>
      <tr>
        <td colspan="3">No showcase items found. Add items manually using the add button above.</td>
      </tr>
    <% end %>
    <% @showcase_items.each do |i| %>
      <tr>
        <td><%= i.name %></td>
        <td><%= i.sort_order %></td>
        <td><%= i.active ? 'Yes' : 'No' %></td>
        <td style="width: 150px">
          <%= link_to 'Edit', edit_admin_showcase_item_path(i.id), class: 'btn btn-primary btn-primary-contrast' %>
          <%= link_to 'Delete', admin_showcase_item_path(i.id), method: 'delete', class: 'btn btn-danger', data: { confirm:"Are you sure you want to delete this item?" }%>
        </td>
      </tr>
    <% end %>
  </table>
</div>